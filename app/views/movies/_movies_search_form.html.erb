<%= search_form_for @q, :class => collapse_search_form, :id => "movies_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

  <div class="form-group">
    <%= f.label :title_cont, "Title contains" %>
    <%= f.text_field :title_cont, :class => "form-control", :placeholder => "Title contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :created_at, "Director Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='directorgteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :director_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Director Created at greater than or equal to", :data => {:target => '#directorgteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#directorgteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='directorlteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :director_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Director Created at less than or equal to", :data => {:target => '#directorlteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#directorlteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#directorgteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#directorlteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#directorgteqcreated_atPicker').on("dp.change", function (e) {
              $('#directorlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#directorlteqcreated_atPicker').on("dp.change", function (e) {
              $('#directorgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :created_at, "Actor Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='actorsgteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :actors_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Actor Created at greater than or equal to", :data => {:target => '#actorsgteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#actorsgteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='actorslteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :actors_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Actor Created at less than or equal to", :data => {:target => '#actorslteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#actorslteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#actorsgteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#actorslteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#actorsgteqcreated_atPicker').on("dp.change", function (e) {
              $('#actorslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#actorslteqcreated_atPicker').on("dp.change", function (e) {
              $('#actorsgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/movies" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

